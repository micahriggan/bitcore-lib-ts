{
  "compilerOptions": {
    "lib": ["es5", "es6"],
    "noImplicitAny": false,
    "removeComments": true,
    "declaration": true,
    "module": "commonjs",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "target": "es6",
    "typeRoots": ["./node_modules/@types"],
    "baseUrl": ".",
    "paths": {
      "*": ["*", "./src/*"]
    },
    "outDir": "ts_build",
    "sourceMap": true
  },
  "files": ["src/types/global.d.ts"],
  "include": ["./src/**/*.ts", "./test/**/*.ts"],
  "exclude": ["node_modules"]
}
